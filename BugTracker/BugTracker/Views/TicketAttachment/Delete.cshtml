@model BugTracker.Models.TicketAttachment

@{
    ViewBag.Title = "Delete";
}


<div class="sub-headers">
    <h3>Are you sure you want to delete this attachment?</h3>

    <div class="form-horizontal">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FilePath)
            </dt>
            <dd>
                @Html.TextBoxFor(model => model.FilePath, new { @class = "form-control", @disabled = "disabled" })

            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @disabled = "disabled" })
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.Created, new { @class = "form-control", @disabled = "disabled" })
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FileUrl)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.FileUrl, new { @class = "form-control", @disabled = "disabled" })
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Index", "TicketAttachment", new { id = Model.TicketId }, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
